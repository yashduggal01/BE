<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles.css">
  <title>Blog Posts</title>
</head>

<body>
  <h1>Blog Posts</h1>
  <a href="/add-post" class="add-post-button">Add New Post</a>
  <div class="posts-container">
    <% posts.forEach(post=> { %>
      <div class="post-card">
        <h2>
          <%= post.title %>
        </h2>
        <p>
          <%= post.content %>
        </p>
        <a href="/post?id=<%= post.id %>">Read More</a>
      </div>
      <% }) %>
  </div>
</body>

</html>